<ContentDialog
    x:Class="HappyMoments.View.ContentDia.UpdatePinPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HappyMoments.View.ContentDia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <StackPanel>

            <TextBlock Text="Pin değiştir" FontFamily="Calibri" FontSize="18" Foreground="#9b9b9b" Margin="20,20,0,0"/>

            <Grid Margin="20,10,20,0">

                <Rectangle Fill="#f3f3f3" Height="auto"/>

                <TextBox Margin="10" Foreground="#a4a8a9"  FontSize="18" PlaceholderText="Eski Pin" x:Name="oldPin" Background="Transparent" InputScope="Number" FontFamily="Calibri" TextWrapping="Wrap" BorderBrush="#8bc34a" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource TextBoxStyle}"/>
            </Grid>

            <Grid Margin="20,10,20,0">

                <Rectangle Fill="#f3f3f3" Height="auto"/>

                <TextBox Margin="10" Foreground="#a4a8a9" FontSize="18" x:Name="newPin" PlaceholderText="Yeni Pin" Background="Transparent" InputScope="Number" FontFamily="Calibri" TextWrapping="Wrap" BorderBrush="#8bc34a" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource TextBoxStyle}"/>
           
            </Grid>

            <Grid Margin="20,10,20,0">

                <Rectangle Fill="#f3f3f3" Height="auto"/>

                <TextBox Margin="10" Foreground="#a4a8a9" FontSize="18" x:Name="reEnterNewPin" PlaceholderText="Yeni Pin (tekrar)" Background="Transparent" InputScope="Number" FontFamily="Calibri" TextWrapping="Wrap" BorderBrush="#8bc34a" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource TextBoxStyle}"/>

            </Grid>

            <Grid Margin="20,10,20,0">

                <Grid x:ConnectionId='1' x:Name="save"                     >

                    <Rectangle Fill="#ee4156" Height="50"/>

                    <TextBlock Text="Kaydet" FontFamily="Calibri" FontSize="16" Foreground="#ffffff" Margin="20,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                </Grid>

            </Grid>
            
        </StackPanel>

    </Grid>

</ContentDialog>

