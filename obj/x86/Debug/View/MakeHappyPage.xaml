<Page
    x:Class="HappyMomentsUWP.View.MakeHappyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HappyMomentsUWP.Controller"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Background>
        <SolidColorBrush Color="#FFECF0F1"/>
    </Page.Background>

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo/>
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>

        <Flyout x:Name="addCard" x:Key="addCardAttachedFlyout" Placement="Full">

            <Grid Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <Image x:ConnectionId='6' x:Name="exitaddCard" Source="ms-appx:///Assets/Icons/close.png" Stretch="Uniform" HorizontalAlignment="Right" Height="15" Width="15" Margin="0,0,20,0"                            />

                </Grid>

                <Grid Grid.Row="1" VerticalAlignment="Center">

                    <StackPanel>

                        <TextBlock Text="Yeni Kart Ekleyiniz" FontFamily="Calibri" FontSize="18" Foreground="#9b9b9b" Margin="20,20,0,0"/>

                        <Grid Margin="20,10,20,0">

                            <Rectangle Fill="#f3f3f3" Height="auto"/>

                            <TextBox x:Name="CardName" Style="{StaticResource TextBoxStyle}" PlaceholderText="Kart sahibinin adı, soyadı" Foreground="#a4a8a9"  VerticalAlignment="Center"/>

                        </Grid>

                        <Grid Margin="20,10,20,0">

                            <Rectangle Fill="#f3f3f3" Height="auto"/>

                            <TextBox x:Name="CardNumber" Style="{StaticResource TextBoxStyle}" InputScope="Number" MaxLength="16" PlaceholderText="Kart numarası" Foreground="#a4a8a9" VerticalAlignment="Center"/>

                        </Grid>

                        <Grid Margin="20,10,20,0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="0,0,5,0">

                                <Rectangle Fill="#f3f3f3" Height="auto"/>

                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">

                                        <TextBox x:Name="Month" Style="{StaticResource TextBoxStyle}" InputScope="Number" MaxLength="2" PlaceholderText="Ay" Foreground="#a4a8a9" VerticalAlignment="Center"/>

                                    </Grid>

                                    <Grid Grid.Column="1">

                                        <TextBox x:Name="Year" Style="{StaticResource TextBoxStyle}" InputScope="Number" MaxLength="4" PlaceholderText="Yıl" Foreground="#a4a8a9" VerticalAlignment="Center"/>

                                    </Grid>

                                </Grid>

                            </Grid>

                            <Grid Grid.Column="1" Margin="5,0,0,0">

                                <Rectangle Fill="#f3f3f3" Height="auto"/>

                                <TextBox x:Name="CvcCode" Style="{StaticResource TextBoxStyle}" InputScope="Number" MaxLength="3" PlaceholderText="CVC" Foreground="#a4a8a9" VerticalAlignment="Center"/>

                            </Grid>

                        </Grid>

                        <Grid Margin="20,10,20,0">

                            <Grid x:ConnectionId='5' x:Name="addCardButton"                              >

                                <Rectangle Fill="#ee4156" Height="50"/>

                                <TextBlock Text="Kart Bilgilerini Kaydet" FontFamily="Calibri" FontSize="16" Foreground="#ffffff" Margin="20,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            </Grid>

                        </Grid>

                    </StackPanel>

                </Grid>

            </Grid>

        </Flyout>

        <Flyout x:Name="message" x:Key="messageAttachedFlyout" Placement="Full">

            <Grid Margin="20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">

                    <Grid.Resources>
                        <local:MediumFontsizeConverter x:Key="FontSizeConverter"/>
                    </Grid.Resources>

                    <StackPanel>

                        <Image x:ConnectionId='4' x:Name="exitTextMessage" Source="ms-appx:///Assets/Icons/close.png" Stretch="Uniform" HorizontalAlignment="Right" Height="15" Width="15"                                />

                        <Grid>

                            <Grid.Resources>
                                <local:LargeFontsizeConverter x:Key="FontSizeConverter"/>
                            </Grid.Resources>

                            <TextBlock Text="Metinsel mesaj ekle" FontFamily="Calibri" Foreground="#6c6c6c" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                        </Grid>

                    </StackPanel>

                </Grid>

                <Grid Grid.Row="1">

                    <TextBox x:Name="textMessage" Background="Transparent" FontFamily="Calibri" TextWrapping="Wrap" BorderBrush="#8bc34a" BorderThickness="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,10"/>

                </Grid>

                <Grid Grid.Row="2">

                    <Grid Margin="0,0,0,5">

                        <Grid.Resources>
                            <local:SmallFontsizeConverter x:Key="FontSizeConverter"/>
                        </Grid.Resources>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid x:ConnectionId='2' Grid.Column="0" Margin="0,0,5,0" x:Name="sendTextMessage"                                >

                            <Rectangle Fill="#ea3c6d" Height="auto"/>

                            <TextBlock Text="Mesajı Ekle" FontFamily="Calibri" FontWeight="Bold" Margin="0,10,0,10" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                        </Grid>

                        <Grid x:ConnectionId='3' Grid.Column="1" Margin="5,0,0,0"                                >

                            <Rectangle Fill="#8a8a8a" Height="auto"/>

                            <TextBlock Text="İptal et" FontFamily="Calibri" FontWeight="Bold" Margin="0,10,0,10" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                        </Grid>

                    </Grid>

                </Grid>

            </Grid>

        </Flyout>

        <Flyout x:Name="voiceMessage" x:Key="voiceMessageAttachedFlyout" Placement="Full">

            <Grid Margin="20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">

                    <Grid.Resources>
                        <local:MediumFontsizeConverter x:Key="FontSizeConverter"/>
                    </Grid.Resources>

                    <StackPanel>

                        <Image x:ConnectionId='1' x:Name="exitVoiceMessage" Source="ms-appx:///Assets/Icons/close.png" Stretch="Uniform" HorizontalAlignment="Right" Height="15" Width="15"                                 />

                        <Grid>

                            <Grid.Resources>
                                <local:ExtraLargeFontsizeConverter x:Key="FontSizeConverter"/>
                            </Grid.Resources>

                            <TextBlock Text="Sesli mesaj ekle" FontFamily="Calibri" Foreground="#6c6c6c" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                        </Grid>

                        <Grid>

                            <Grid.Resources>
                                <local:MediumFontsizeConverter x:Key="FontSizeConverter"/>
                            </Grid.Resources>

                            <TextBlock Text="30 saniyelik bir ses kaydı çekebilirsiniz." Margin="0,5,0,0" FontFamily="Calibri" Foreground="#8a8a8a" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                        </Grid>

                    </StackPanel>

                </Grid>

                <Grid Grid.Row="1">

                    <TextBox Background="Transparent" FontFamily="Calibri" TextWrapping="Wrap" BorderBrush="#19bda4" BorderThickness="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,10"/>

                </Grid>

                <Grid Grid.Row="2">

                    <Grid Margin="0,0,0,5">

                        <Grid.Resources>
                            <local:SmallFontsizeConverter x:Key="FontSizeConverter"/>
                        </Grid.Resources>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="0,0,5,0">

                            <Rectangle Fill="#ea3c6d" Height="auto"/>

                            <TextBlock Text="Mesajı İlet" FontFamily="Calibri" FontWeight="Bold" Margin="0,10,0,10" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                        </Grid>

                        <Grid Grid.Column="1" Margin="5,0,0,0">

                            <Rectangle Fill="#8a8a8a" Height="auto"/>

                            <TextBlock Text="İptal et" FontFamily="Calibri" FontWeight="Bold" Margin="0,10,0,10" Foreground="#ffffff" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                        </Grid>

                    </Grid>

                </Grid>

            </Grid>

        </Flyout>

        <SolidColorBrush x:Key="SliderBorderThemeBrush" Color="Transparent"/>
        <Thickness x:Key="SliderBorderThemeThickness">0</Thickness>
        <FontFamily x:Key="ContentControlThemeFontFamily">Segoe WP</FontFamily>
        <x:Double x:Key="ControlContentThemeFontSize">12</x:Double>
        <x:Double x:Key="SliderOutsideTickBarThemeHeight">5</x:Double>
        <x:Double x:Key="SliderTrackThemeHeight">9</x:Double>
        <SolidColorBrush x:Key="SliderDisabledBorderThemeBrush" Color="Transparent"/>
        <Style x:Key="SliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="#8dc34b"/>
            <Setter Property="BorderBrush" Value="{ThemeResource SliderBorderThemeBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{ThemeResource SliderTrackDecreaseBackgroundThemeBrush}"/>
            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
            <Setter Property="ManipulationMode" Value="None"/>
            <Setter Property="IsThumbToolTipEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.Resources>
                                <Style x:Key="SliderThumbStyle" TargetType="Thumb">
                                    <Setter Property="BorderThickness" Value="10"/>
                                    <Setter Property="BorderBrush" Value="#8dc34b"/>
                                    <Setter Property="Background" Value="#fa9696"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Stroke" Storyboard.TargetName="HorizontalBorder">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Stroke" Storyboard.TargetName="VerticalBorder">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="HorizontalDecreaseRect">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="HorizontalTrackRect">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Stroke" Storyboard.TargetName="HorizontalTrackRect">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="VerticalDecreaseRect">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="VerticalTrackRect">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Stroke" Storyboard.TargetName="VerticalTrackRect">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="HorizontalThumb">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="HorizontalThumb">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#fa9696"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="VerticalThumb">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#de5d58"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="VerticalThumb">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#de5d58"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="TopTickBar">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#de5d58"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="HorizontalInlineTickBar">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#de5d58"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="BottomTickBar">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#de5d58"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="LeftTickBar">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#de5d58"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="VerticalInlineTickBar">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#de5d58"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Fill" Storyboard.TargetName="RightTickBar">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#de5d58"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="HeaderContentPresenter" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" Style="{StaticResource HeaderContentPresenterStyle}"/>
                            <Grid x:Name="SliderContainer" Background="Transparent" Grid.Row="1">
                                <Grid x:Name="HorizontalTemplate">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="17.5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="30.5"/>
                                    </Grid.RowDefinitions>
                                    <Rectangle x:Name="HorizontalTrackRect" Grid.ColumnSpan="3" Fill="#fa9696" Grid.Row="1" Stroke="Transparent"/>
                                    <Rectangle x:Name="HorizontalDecreaseRect" Fill="#e95855" Grid.Row="1"/>
                                    <TickBar x:Name="TopTickBar" Grid.ColumnSpan="3" Fill="#8dc34b" Margin="-4.5,0" Visibility="Visible"/>
                                    <TickBar x:Name="HorizontalInlineTickBar" Grid.ColumnSpan="3" Fill="#8dc34b" Height="{ThemeResource SliderTrackThemeHeight}" Margin="-4.5,0" Grid.Row="1" Visibility="Collapsed"/>
                                    <TickBar x:Name="BottomTickBar" Grid.ColumnSpan="3" Fill="#8dc34b" Height="{ThemeResource SliderOutsideTickBarThemeHeight}" Margin="-4.5,0" Grid.Row="2" Visibility="Collapsed"/>
                                    <Thumb x:Name="HorizontalThumb" AutomationProperties.AccessibilityView="Raw" Background="Yellow}" Grid.Column="1" DataContext="{TemplateBinding Value}" Height="19" Margin="0,13,0,0" Grid.RowSpan="3" Style="{StaticResource SliderThumbStyle}" VerticalAlignment="Top" Width="9.5"/>
                                    <Rectangle x:Name="HorizontalBorder" Grid.ColumnSpan="3" Grid.RowSpan="3" Stroke="Yellow" StrokeThickness="0"/>
                                </Grid>
                                <Grid x:Name="VerticalTemplate" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13.5"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="13.5"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Rectangle x:Name="VerticalTrackRect" Grid.Column="1" Fill="Transparent" Grid.RowSpan="3" StrokeThickness="0" Stroke="#8dc34b"/>
                                    <Rectangle x:Name="VerticalDecreaseRect" Grid.Column="1" Fill="Transparent" Grid.Row="2"/>
                                    <TickBar x:Name="LeftTickBar" Fill="#8dc34b" HorizontalAlignment="Right" Margin="0,0,1.5,0" Grid.RowSpan="3" Visibility="Collapsed" Width="{ThemeResource SliderOutsideTickBarThemeHeight}"/>
                                    <TickBar x:Name="VerticalInlineTickBar" Grid.Column="1" Fill="#8dc34b" Grid.RowSpan="3" Visibility="Collapsed" Width="{ThemeResource SliderTrackThemeHeight}"/>
                                    <TickBar x:Name="RightTickBar" Grid.Column="2" Fill="#8dc34b" HorizontalAlignment="Left" Margin="1.5,0,0,0" Grid.RowSpan="3" Visibility="Collapsed" Width="{ThemeResource SliderOutsideTickBarThemeHeight}"/>
                                    <Thumb x:Name="VerticalThumb" AutomationProperties.AccessibilityView="Raw" Background="#8dc34b" Grid.Column="1" DataContext="{TemplateBinding Value}" Height="{ThemeResource SliderTrackThemeHeight}" Grid.Row="1" Style="{StaticResource SliderThumbStyle}" Width="{ThemeResource SliderTrackThemeHeight}"/>
                                    <Rectangle x:Name="VerticalBorder" Grid.Column="1" Grid.RowSpan="3" Stroke="#8dc34b" StrokeThickness="0"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>

        <Grid.Background>
            <SolidColorBrush Color="#b6b6b6"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,1,0,1">

            <Grid.Background>
                <ImageBrush ImageSource="{Binding ProfileImage}" Opacity="0.9" Stretch="UniformToFill"/>
            </Grid.Background>

            <Grid Background="#4C212121" Margin="0"/>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">

                <Grid>

                    <Grid.Resources>
                        <local:ExtraLargeFontsizeConverter x:Key="FontSizeConverter"/>
                    </Grid.Resources>

                    <TextBlock Text="{Binding Name}" FontFamily="Calibri" Foreground="#FFECF0F1" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontWeight="Bold" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                </Grid>

                <Grid>

                    <Grid.Resources>
                        <local:SmallFontsizeConverter x:Key="FontSizeConverter"/>
                    </Grid.Resources>

                    <TextBlock Text="{Binding Description}" FontFamily="Calibri" TextWrapping="WrapWholeWords" Foreground="#FFECF0F1" VerticalAlignment="Bottom" TextAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                </Grid>

            </StackPanel>

        </Grid>

        <Grid Grid.Row="1" Margin="0,0.5,0,0.5">

            <Grid.Background>
                <SolidColorBrush Color="#FFECF0F1"/>
            </Grid.Background>

            <Grid Margin="10">

                <FlipView x:ConnectionId='11' x:Name="flipViewOut"                                                >

                    <FlipViewItem Width="150">

                        <FlipView x:ConnectionId='13' x:Name="flipViewIn"                                               >

                            <FlipView.ItemTemplate>

                                <DataTemplate>

                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="1">

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">

                                                <Grid.Background>
                                                    <SolidColorBrush Color="#8cc14b"/>
                                                </Grid.Background>

                                                <Grid.Resources>
                                                    <local:LargeFontsizeConverter x:Key="FontSizeConverter"/>
                                                </Grid.Resources>

                                                <TextBlock Foreground="#ffffff" Margin="20,10,0,10" FontFamily="Calibri" TextWrapping="WrapWholeWords" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}">
                                                    <Run Text="{Binding CardName}"/>
                                                </TextBlock>

                                            </Grid>

                                            <Grid Grid.Row="1">

                                                <Grid.Background>
                                                    <SolidColorBrush Color="#dddddd"/>
                                                </Grid.Background>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0">

                                                    <Image Source="{Binding CardImage}" Height="60" Margin="20,0,0,0" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" />

                                                </Grid>

                                                <Grid Grid.Column="1">

                                                    <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">

                                                        <Grid>

                                                            <Grid.Resources>
                                                                <local:MediumFontsizeConverter x:Key="FontSizeConverter"/>
                                                            </Grid.Resources>


                                                            <TextBlock FontFamily="Calibri" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}">
                                                            <Run Text="SKT :" Foreground="Black" FontWeight="Bold"/>
                                                            <Run Text="{Binding Month}" Foreground="Black"/>
                                                            <Run Text="/" Foreground="Black"/>
                                                            <Run Text="{Binding Year}" Foreground="Black"/>
                                                            </TextBlock>

                                                        </Grid>

                                                        <Grid Margin="0,5,0,0">

                                                            <Grid.Resources>
                                                                <local:MediumFontsizeConverter x:Key="FontSizeConverter"/>
                                                            </Grid.Resources>

                                                            <TextBlock Foreground="#000000" FontFamily="Calibri" TextWrapping="WrapWholeWords" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}">
                                                           <Run Text="{Binding CardNumber}"/>
                                                            </TextBlock>

                                                        </Grid>

                                                    </StackPanel>

                                                </Grid>

                                            </Grid>

                                        </Grid>

                                    </Grid>

                                </DataTemplate>

                            </FlipView.ItemTemplate>

                            <FlipView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </FlipView.ItemsPanel>

                        </FlipView>

                    </FlipViewItem>

                    <FlipViewItem Width="150">

                        <Grid x:ConnectionId='12' x:Name="addNewCard"                            FlyoutBase.AttachedFlyout="{StaticResource addCardAttachedFlyout}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="1">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">

                                    <Grid.Background>
                                        <SolidColorBrush Color="#8cc14b"/>
                                    </Grid.Background>

                                    <Grid.Resources>
                                        <local:LargeFontsizeConverter x:Key="FontSizeConverter"/>
                                    </Grid.Resources>

                                    <TextBlock Text="Yeni Kart Ekle" Foreground="#ffffff" Margin="20,10,0,10" FontFamily="Calibri" TextWrapping="WrapWholeWords" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                                </Grid>

                                <Grid Grid.Row="1">

                                    <Grid.Background>
                                        <SolidColorBrush Color="#dddddd"/>
                                    </Grid.Background>

                                    <Grid>

                                        <Grid.Resources>
                                            <local:LargeFontsizeConverter x:Key="FontSizeConverter"/>
                                        </Grid.Resources>

                                        <TextBlock Text="Yeni kart eklemek için tıklayın." Foreground="#000000" FontFamily="Calibri" TextWrapping="WrapWholeWords" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Converter={StaticResource FontSizeConverter}, RelativeSource={RelativeSource Mode=Self}}"/>

                                    </Grid>

                                </Grid>

                            </Grid>

                        </Grid>

                    </FlipViewItem>

                </FlipView>

            </Grid>

        </Grid>

        <Grid Grid.Row="2" Margin="0,0.5,0,0.5">

            <Grid.Background>
                <SolidColorBrush Color="#FFECF0F1"/>
            </Grid.Background>

